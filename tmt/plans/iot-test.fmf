summary: Fedora iot test plan
discover:
  how: fmf
  test: iot-test
execute:
  how: tmt
provision:
  hardware:
    virtualization:
      is-supported: true
    cpu:
      processors: ">= 4"
    memory: ">= 8 GB"

/iot-x86-installer:
  summary: Test fedora-iot x86_64 installer ISO image
  environment+:
    TEST_CASE: iot-installer

/iot-x86-simplified-installer:
  summary: Test fedora-iot x86_64 simplified installer ISO image
  environment+:
    TEST_CASE: iot-simplified-installer

/iot-aarch64-installer:
  summary: Test fedora-iot aarch64 installer ISO image
  environment+:
    TEST_CASE: iot-installer

/iot-aarch64-simplified-installer:
  summary: Test fedora-iot aarch64 simplified installer ISO image
  environment+:
    TEST_CASE: iot-simplified-installer
