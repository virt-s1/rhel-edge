summary: Fedora iot test plan
discover:
  how: fmf
  test: iot-test
execute:
  how: tmt
provision:
  hardware:
    virtualization:
      is-supported: true
    cpu:
      processors: ">= 2"
    memory: ">= 6 GB"

/iot-x86-installer:
  summary: Test fedora-iot x86_64 installer ISO image
  environment+:
    TEST_CASE: iot-installer

/iot-x86-simplified-installer:
  summary: Test fedora-iot x86_64 simplified installer ISO image
  environment+:
    TEST_CASE: iot-simplified-installer

/iot-x86-raw-image:
  summary: Test fedora-iot x86_64 raw image
  environment+:
    TEST_CASE: iot-raw-image

/iot-x86-bootc:
  summary: Test fedora-iot x86_64 bootc image
  environment+:
    TEST_CASE: iot-bootc

/iot-aarch64-installer:
  summary: Test fedora-iot aarch64 installer ISO image
  environment+:
    TEST_CASE: iot-installer

/iot-aarch64-simplified-installer:
  summary: Test fedora-iot aarch64 simplified installer ISO image
  environment+:
    TEST_CASE: iot-simplified-installer

/iot-aarch64-raw-image:
  summary: Test fedora-iot aarch64 raw image
  environment+:
    TEST_CASE: iot-raw-image

/iot-aarch64-bootc:
  summary: Test fedora-iot aarch64 bootc image
  environment+:
    TEST_CASE: iot-bootc
